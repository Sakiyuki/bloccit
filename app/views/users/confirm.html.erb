<h1>Sign Up Confirmation</h1>

<div class="row">
  <div class="col-md-12">
    <h4>Are you sure these values are correct?</h4>
    <h5>Email: <%= @user.email %></h5>
    <h5>Name: <%= @user.name %></h5>
  </div>
</div>

<div clas="row">
  <div class="first">
    <%= button_to "Yes", {:controller => "users", :action => "create", :params => params}, class: 'btn btn-success' %>
  </div>

  <div class="">
    <%= button_to "No", {:controller => "users", :action => "create", :params => params}, class: 'btn btn-secondary' %>
  </div>
</div>
